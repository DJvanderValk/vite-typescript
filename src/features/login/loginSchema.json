{
	"$schema": "https://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"username": {
			"type": "string",
			"format": "email",
			"pattern": "^[^\\s]*$",
			"maxLength": 40
		},
		"password": {
			"type": "string",
			"format": "password",
			"minLength": 5,
			"maxLength": 40
		}
	},
	"required": ["username", "password"]
}
